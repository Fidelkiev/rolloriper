<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="window" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e8f4f8;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#d1e7dd;stop-opacity:1" />
    </linearGradient>
    <pattern id="pleats" x="0" y="0" width="20" height="30" patternUnits="userSpaceOnUse">
      <path d="M0,0 Q10,15 0,30" stroke="#4a90a4" stroke-width="2" fill="none" opacity="0.6"/>
      <path d="M20,0 Q10,15 20,30" stroke="#4a90a4" stroke-width="2" fill="none" opacity="0.6"/>
    </pattern>
  </defs>
  
  <!-- Window frame -->
  <rect x="50" y="30" width="300" height="240" fill="url(#window)" stroke="#8b7355" stroke-width="8"/>
  <line x1="200" y1="30" x2="200" y2="270" stroke="#8b7355" stroke-width="4"/>
  <line x1="50" y1="150" x2="350" y2="150" stroke="#8b7355" stroke-width="4"/>
  
  <!-- Pleated blinds -->
  <rect x="60" y="40" width="280" height="220" fill="url(#pleats)" opacity="0.8"/>
  
  <!-- Title -->
  <text x="200" y="295" text-anchor="middle" font-family="Arial" font-size="16" fill="#2c3e50">Плиссе шторы</text>
</svg>
